<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.configuraciones.AcercaDe">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESARROLLADOR"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sans_pro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angel Landín López"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sans_pro" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asesor Técnico"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sans_pro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saul Ibarra Álvarez"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sans_pro" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asesor Metodológico"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sans_pro"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gerardo Belmán Vera"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sans_pro" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>